##################################################

${EXE}: ${DRNOLIB} main.c
	${CC} ${INCL} ${GFLAGS} -c main.c
	if test -e ./libs/${DRNOLIB} ; then \
	  ${CC} -o ${EXE} main.o ./.libs/${DRNOLIB} ./oc/.libs/${OCLIB} ${LIBS} ; \
	else \
	  ${CC} -o ${EXE} main.o ${DRNOLIB} ${OCLIB} ${LIBS} ; \
	fi

${DRNOLIB}: ${OBJ}
	ar r ${DRNOLIB} ${OBJ}

${OBJ}: ${SRC} ${HDRS}
	${CC} ${CFLAGS} ${GFLAGS} -c ${INCL} ${SRC}

